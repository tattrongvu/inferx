{
    "type": "function",
    "tenant": "public",
    "namespace": "tiiuae",
    "name": "falcon-rw-7b",
    "object": {
        "spec": {
            "image": "vllm/vllm-openai:v0.6.2",
            "commands": [
                "--model",
                "tiiuae/falcon-rw-7b",
                "--enforce-eager",
                "--disable-custom-all-reduce",
                "--max-model-len",
                "2000",
                "--tensor-parallel-size=2"
            ],
            "resources": {
                "CPU": 12000,
                "Mem": 80000,
                "GPU": {
                    "Type": "Any",
                    "Count": 2,
                    "vRam": 13800
                }
            },
            "envs": [
                [
                    "LD_LIBRARY_PATH",
                    "/usr/local/lib/python3.12/dist-packages/nvidia/cuda_nvrtc/lib/:$LD_LIBRARY_PATH"
                ]
            ],
            "mounts": [
                {
                    "hostpath": "/home/brad/cache",
                    "mountpath": "/root/.cache/huggingface"
                }
            ],
            "endpoint": {
                "port": 8000,
                "schema": "Http",
                "probe": "/health"
            },
            "sample_query": {
                "apiType": "openai",
                "prompt": "Here is a recipe for vegan banana bread:",
                "path": "v1/completions",
                "body": {
                    "model": "tiiuae/falcon-rw-7b",
                    "max_tokens": "1000",
                    "temperature": "0",
                    "stream": "true"
                }
            },
            "standby": {
                "gpu": "Blob",
                "pageable": "Blob",
                "pinned": "Blob"
            }
        }
    }
}